# Thumbnail SaaS - Environment Variables

# NextAuth Configuration
# You can generate a new secret with: npx auth secret
AUTH_SECRET=your_auth_secret_here
NEXTAUTH_URL=http://localhost:3000
BASE_URL=http://localhost:3000

# Prisma / Database
DATABASE_URL=your_database_url_here

# AWS S3 Configuration
MY_AWS_ACCESS_KEY=your_aws_access_key
MY_AWS_SECRET_KEY=your_aws_secret_key
MY_AWS_REGION=your_aws_region
MY_AWS_BUCKET_NAME=your_s3_bucket_name

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Stripe Credit Packs (Optional)
STRIPE_10_PACK=price_id_for_10_pack
STRIPE_25_PACK=price_id_for_25_pack
STRIPE_100_PACK=price_id_for_100_pack
